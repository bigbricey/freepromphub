---
import Base from "../../layouts/Base.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import categories from "../../data/categories.json";
const title = 'Prompts â€” FreePromptHub';
const description = 'Browse prompts by category.';
---
<Base {title} {description} canonical="https://www.freeprompthub.com/prompts">
  <Header />
  <main class="container py-10">
    <h1 class="text-2xl font-bold mb-6">Categories</h1>
    <section class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
      {categories.map(c => (
        <a class="card" href={`/prompts/${c.slug}`}>
          <h3 class="font-bold text-lg">{c.name}</h3>
          <p class="text-gray-600 dark:text-gray-300">{c.description}</p>
        </a>
      ))}
    </section>
  </main>
  <Footer />
</Base>

