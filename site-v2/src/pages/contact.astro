---
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const title = 'Contact â€” FreePromptHub';
const description = 'Contact the FreePromptHub team.';
---
<Base {title} {description} canonical="https://www.freeprompthub.com/contact">
  <Header />
  <main class="container py-10">
    <section class="card">
      <h1 class="text-2xl font-bold mb-4">Contact</h1>
      <!-- Netlify Forms compatible -->
      <form name="contact" method="POST" data-netlify="true" class="grid gap-4">
        <input type="hidden" name="form-name" value="contact" />
        <label class="grid gap-1">
          <span>Name</span>
          <input class="border rounded-lg px-3 py-2 bg-white dark:bg-gray-900" name="name" required />
        </label>
        <label class="grid gap-1">
          <span>Email</span>
          <input class="border rounded-lg px-3 py-2 bg-white dark:bg-gray-900" type="email" name="email" required />
        </label>
        <label class="grid gap-1">
          <span>Message</span>
          <textarea class="border rounded-lg px-3 py-2 bg-white dark:bg-gray-900" name="message" rows="5" required></textarea>
        </label>
        <button class="btn-primary" type="submit">Send</button>
      </form>
    </section>
  </main>
  <Footer />
</Base>

