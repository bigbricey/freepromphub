---
const links = [
  { href: '/', label: 'Home' },
  { href: '/prompts', label: 'Prompts' },
  { href: '/search', label: 'Search' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' }
];
---
<header class="border-b border-gray-200 dark:border-gray-800 bg-white/80 dark:bg-gray-900/80 backdrop-blur">
  <div class="container py-4 flex items-center justify-between">
    <a href="/" class="font-extrabold text-xl">FreePromptHub</a>
    <nav class="flex gap-5 text-sm">
      {links.map(l => <a href={l.href} class="hover:text-primary">{l.label}</a>)}
    </nav>
  </div>
  </header>
